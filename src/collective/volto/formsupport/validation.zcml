<configure xmlns="http://namespaces.zope.org/zope">

  <!-- Custom validators -->
  <utility
      provides=".validation.IFieldValidator"
      name="maxCharacters"
      component=".validation.custom_validators.maxCharacters"
      />
  <utility
      provides=".validation.IFieldValidator"
      name="minCharacters"
      component=".validation.custom_validators.minCharacters"
      />

  <!-- All validations vocabulary -->
  <utility
      name="collective.volto.formsupport.Validators"
      component=".validation.ValidatorsVocabularyFactory"
      />


</configure>
